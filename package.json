{
  "name": "senior-health",
  "version": "1.0.0",
  "description": "My Moleculer-based microservices project",
  "scripts": {
    "dev": "moleculer-runner --repl --hot services/**/*.service.js",
    "start": "moleculer-runner",
    "cli": "moleculer connect NATS",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint services",
    "dc:build": "docker-compose -f docker-compose.yml up --build",
    "dc:up": "docker-compose -f docker-compose.yml up -d",
    "dc:down": "docker-compose down",
    "dc:rm": "docker compose -f docker-compose.yml down -v --rmi all",
    "dc:logs": "docker-compose logs -f",
    "dc:exec": "docker exec -it smart-challenge sh"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "eslint": "^7.32.0",
    "jest": "^27.1.0",
    "jest-cli": "^27.1.0",
    "moleculer-repl": "^0.6.6"
  },
  "dependencies": {
    "csv": "^6.1.0",
    "csv-writer": "^1.6.0",
    "ioredis": "^4.27.9",
    "moleculer": "^0.14.16",
    "moleculer-db": "^0.8.15",
    "moleculer-db-adapter-mongo": "^0.4.13",
    "moleculer-web": "^0.10.2",
    "nats": "^2.2.0"
  },
  "engines": {
    "node": ">= 12.x.x"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  }
}
